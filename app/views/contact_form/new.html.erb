<div class="sixteen columns">
  <h1>Tell us all your thoughts and your dreams.</h1>
  <p>(Also, tell us about events happening in Olympia, WA. That would be great.)</p>

  <%= form_for @message, :url => contact_path do |form| %>
    <fieldset class="fields">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
    
      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email %>
      </div>
      
      <div class="field">
        <%= form.label :subject %>
        <%= form.text_field :subject %>
      </div>
    
      <div class="field">
        <%= form.label "Message" %>
        <%= form.text_area :body %>
      </div>
    </fieldset>
  
    <fieldset class="actions">
      <%= form.submit "Send" %>
    </fieldset>
  <% end %>
</div>